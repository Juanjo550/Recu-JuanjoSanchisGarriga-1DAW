<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.recuproyecto.Controladores.EditarContacto"
            prefHeight="600.0" prefWidth="900.0">

    <children>
        <Label layoutX="72.0" layoutY="46.0" prefHeight="83.0" prefWidth="264.0" text="Editar Contacto">
            <font>
                <Font size="36.0" />
            </font>
        </Label>

        <Label layoutX="137.0" layoutY="115.0" text="a través de email">
            <font>
                <Font size="18.0" />
            </font>
        </Label>

        <Button fx:id="btValidarEmail" layoutX="162.0" layoutY="250.0" mnemonicParsing="false"
                text="Validar Email" onAction="#validarEmail" />

        <TextField fx:id="tfEmail" layoutX="129.0" layoutY="209.0" promptText="Coloque el email" />

        <Label layoutX="104.0" layoutY="176.0" text="Primero valida el email para continuar" />

        <VBox alignment="CENTER" layoutX="368.0" layoutY="-12.0" prefHeight="575.0" prefWidth="532.0">
            <children>
                <Label text="Nombre">
                    <font><Font size="14.0"/></font>
                </Label>
                <TextField fx:id="tfNombre" onAction="#editarNombre" prefHeight="42.0" prefWidth="627.0" />

                <Label text="Apellido 1">
                    <font><Font size="14.0"/></font>
                </Label>
                <TextField fx:id="tfApellido1" onAction="#editarApellido1" prefHeight="42.0" prefWidth="627.0" />

                <Label text="Apellido 2">
                    <font><Font size="14.0"/></font>
                </Label>
                <TextField fx:id="tfApellido2" onAction="#editarApellido2" prefHeight="42.0" prefWidth="627.0" />

                <Label text="Teléfono">
                    <font><Font size="14.0"/></font>
                </Label>
                <TextField fx:id="tfTelefono" onAction="#editarrTelefono" prefHeight="42.0" prefWidth="627.0" />

                <Button fx:id="btEditarContacto" mnemonicParsing="false" onAction="#editarContacto"
                        prefHeight="34.0" prefWidth="302.0" text="Editar contacto">
                    <VBox.margin><Insets top="20.0"/></VBox.margin>
                </Button>

                <Button fx:id="btVolver1" mnemonicParsing="false" onAction="#Volver" text="Volver">
                    <VBox.margin><Insets top="20.0"/></VBox.margin>
                </Button>
            </children>
            <padding>
                <Insets left="150.0" right="150.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
